<h1>Sign Up!</h1>


<%= form_for @user do |f| %>

    <div>
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div>
        <%= f.submit 'Create Your Account', class: 'btn btn-primary' %>
    </div>

<% end %>