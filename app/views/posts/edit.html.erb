<h1>Edit This Post</h1>
<p>Find me in app/views/posts/edit.html.erb</p>

<%= form_for @post do |f|  %>
    <div>
        <%= f.label "Title" %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label "Content" %>
        <%= f.text_field :content %>
    </div>
    <div>
        <%= f.submit 'Submit' %>
    </div>
<% end %>
