<h1>Viewing This Post</h1>


<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<%= form_for @comment do |f|  %>
    <div>
        <%= f.label "Comment" %>
        <%= f.text_field :content, class: 'form-control' %>
    </div>
    <div>
        <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
    <div>
        <%= f.hidden_field :post_id, :value => @post.id %>
    </div>
    <div>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
<% end %>

<h1>Comments</h1>
    <% @comments.each do |f| %>
        <% @commentauthor = User.find(f.user_id) %>
        <h4>By: <%= @commentauthor.username %></h4> <p><%= f.content %></p>
    <% end %>