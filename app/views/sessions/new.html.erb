<div>
    <h1>Log In</h1>

    <%= form_for(:session, url: login_path) do |f| %>
           
        <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email%>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
            
        <div>
            <%= f.submit 'Log In', :class => 'btn btn-primary'%>
        </div>

    <% end %>
        
</div>